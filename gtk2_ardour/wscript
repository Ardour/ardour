def copyfile(task):
	src=task.inputs[0].abspath()
	tgt=task.outputs[0].abspath()
	if os.path.isfile(tgt) :
		os.chmod(tgt, Utils.O755);
	shutil.copy2(src,tgt)
	if os.path.isfile(tgt) :
		os.chmod(tgt, Utils.O755);

